<?xml version="1.0"?>
<database xmlns="spryker:schema-01" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="zed" xsi:schemaLocation="spryker:schema-01 https://static.spryker.com/schema-01.xsd" namespace="Orm\Zed\CustomerAssets\Persistence" package="src.Orm.Zed.CustomerAssets.Persistence">

    <table name="pyz_customer_assets" idMethod="native" allowPkInsert="true" identifierQuoting="true">
        <column name="id_customer_assets" required="true" type="INTEGER" primaryKey="true" autoIncrement="true"/>
        <column name="fk_sku" required="true" type="VARCHAR"/>
        <column name="fk_customer" required="true" type="INTEGER"/>
        <column name="fk_sales_order_item" required="false" type="INTEGER"/>

        <foreign-key name="pyz_customer_assets-fk_sku" foreignTable="spy_product" phpName="Product" onDelete="CASCADE" onUpdate="CASCADE">
            <reference local="fk_sku" foreign="sku"/>
        </foreign-key>

        <foreign-key name="pyz_customer_assets-fk_customer" foreignTable="spy_customer" phpName="Customer">
            <reference local="fk_customer" foreign="id_customer"/>
        </foreign-key>

        <foreign-key name="pyz_customer_assets-fk_sales_order_item" foreignTable="spy_sales_order_item" phpName="OrderItem">
            <reference local="fk_sales_order_item" foreign="id_sales_order_item"/>
        </foreign-key>
       
        <behavior name="timestampable"/>
    </table>


</database>
